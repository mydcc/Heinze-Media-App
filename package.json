{
	"name": "heinze-media-app",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npx -y pagefind --site build",
		"preview": "vite preview --outDir build",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:content": "npx tsx scripts/check-content.ts",
		"check:links": "npx tsx scripts/check-links.ts",
		"pre-commit": "node scripts/pre-commit-check.js",
		"fix:content": "npx tsx scripts/fix-frontmatter.ts",
		"translate": "node scripts/translate-content.js"
	},
	"devDependencies": {
		"@inlang/paraglide-js": "^2.9.1",
		"@inlang/paraglide-sveltekit": "^1.0.0-beta.7",
