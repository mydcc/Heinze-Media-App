		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^25.2.0",
		"axios": "^1.13.2",
		"glob": "^13.0.0",
		"jsdom": "^27.4.0",
		"mdsvex": "^0.12.6",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.18",
		"turndown": "^7.2.2",
		"typescript": "^5.9.3",
