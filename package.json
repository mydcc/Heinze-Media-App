	"dependencies": {
		"@fontsource/inter": "^5.2.8",
		"@fontsource/montserrat": "^5.2.8",
		"@threlte/core": "^8.3.1",
		"@threlte/extras": "^9.7.1",
		"@types/three": "^0.182.0",
		"gray-matter": "^4.0.3",
		"marked": "^17.0.1",
		"three": "^0.182.0",
		"zod": "^4.3.6"
	}
